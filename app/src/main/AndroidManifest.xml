<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firstnationconnect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirstNationConnect">
        <activity
            android:name=".NewImageReplyActivity"
            android:parentActivityName=".PostActivity"
            android:exported="true" />
        <activity
            android:name=".ReplySelectActivity"
            android:parentActivityName=".PostActivity"
            android:theme="@style/Theme.AppCompat.PopupTheme"
            android:exported="true" />
        <activity
            android:name=".PostSelectActivity"
            android:exported="true"
            android:parentActivityName=".SubforumActivity"
            android:theme="@style/Theme.AppCompat.PopupTheme" />
        <activity
            android:name=".SurveyResultActivity"
            android:exported="true"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SurveyActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".TosActivity"
            android:theme="@style/Theme.AppCompat.PopupTheme" />
        <activity
            android:name=".CreditsActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ResourceTopicActivity"
            android:parentActivityName=".ResourcesActivity" />
        <activity
            android:name=".ProfileEditActivity"
            android:parentActivityName=".ProfileActivity" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".NewPostActivity"
            android:parentActivityName=".SubforumActivity" />
        <activity
            android:name=".NewImagePostActivity"
            android:parentActivityName=".SubforumActivity" />
        <activity
            android:name=".NewVideoPostActivity"
            android:parentActivityName=".SubforumActivity" />
        <activity
            android:name=".PostActivity"
            android:parentActivityName=".SubforumActivity" />
        <activity
            android:name=".SubforumActivity"
            android:parentActivityName=".ForumActivity" />
        <activity
            android:name=".ForumActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ResourcesActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".SetupActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>