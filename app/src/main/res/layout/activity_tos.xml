<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackbordergradient"
    tools:context=".TosActivity">

    <TextView
        android:id="@+id/tvTermsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Terms of Use"
        android:textSize="25sp"
        android:fontFamily="@font/allerta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/fnclogo"
        app:layout_constraintLeft_toRightOf="@id/tvTermsTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTermsContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat"
        android:gravity="center_horizontal"
        android:text="Terms of Use"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btAcceptTerms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTermsTitle" />

    <Button
        android:id="@+id/btAcceptTerms"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_bg_pop_button"
        android:fontFamily="@font/fredoka_one"
        android:text="Accept"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/copyright2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btDeclineTerms" />

    <Button
        android:id="@+id/btDeclineTerms"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round_bg_pop_button"
        android:fontFamily="@font/fredoka_one"
        android:text="Decline"
        android:textColor="@color/colorRed"
        app:layout_constraintBottom_toTopOf="@+id/copyright2"
        app:layout_constraintEnd_toStartOf="@id/btAcceptTerms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTermsContent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/copyright2"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="FirstNationConnect 2021 Â©"
        android:textAlignment="center"
        android:fontFamily="@font/montserrat"
        android:textColor="#000000"
        android:layout_marginBottom="11dp"
        android:textSize="13sp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>