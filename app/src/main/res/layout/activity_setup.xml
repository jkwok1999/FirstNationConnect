<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colourgradient"
    tools:context=".SetupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetupActivity">
        <View
            android:id="@+id/topView2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topView2" />

        <TextView
            android:id="@+id/tvCreateNewAccount"
            android:layout_width="409dp"
            android:layout_height="36dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="Account Setup"
            android:fontFamily="@font/allerta"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textColorHighlight="#E4D6D6"
            android:textColorLink="#FDFDFD"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setupImage"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_marginBottom="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/default_profile"
            app:layout_constraintBottom_toBottomOf="@+id/wave3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateNewAccount" />

        <EditText
            android:id="@+id/registerFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:fontFamily="@font/montserrat"
            android:ems="10"
            android:hint="Enter First Name (Optional)"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setupImage" />

        <EditText
            android:id="@+id/registerLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Last Name (Optional)"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerFirstName" />


        <EditText
            android:id="@+id/registerUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Username"
            android:fontFamily="@font/montserrat"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerLastName" />

        <RadioGroup
            android:id="@+id/rgSetupGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbPreferNotToSay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prefer not to say"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black" />

        </RadioGroup>

        <EditText
            android:id="@+id/registerAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Age"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerUsername" />

        <EditText
            android:id="@+id/registerFNDTribe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:hint="Enter Culture Group Name"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgFndSetup" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#00000000"
            android:drawablePadding="10dp"
            android:text="Gender: "
            android:textColor="#686666"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerAge" />


        <TextView
            android:id="@+id/fndTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="#00000000"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Are you of First Nations Descent?"
            android:textColor="#686666"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgSetupGender" />


        <RadioGroup
            android:id="@+id/rgFndSetup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fndTV">

            <RadioButton
                android:id="@+id/rbFndSetupYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Yes"
                android:onClick="FndYes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbFndSetupNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="No"
                android:onClick="FndYes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/rbFndSetupPNTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Prefer not to say"
                android:onClick="FndYes"
                android:textColor="@color/black" />


        </RadioGroup>

        <Button
            android:id="@+id/createSetup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_bg"
            android:fontFamily="@font/fredoka_one"
            android:text="Register"
            android:textColor="@color/colorRed"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerFNDTribe" />

        <ProgressBar
            android:id="@+id/registerProgressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/createSetup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerFNDTribe" />


        <TextView
            android:id="@+id/copyright2"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="FirstNationConnect 2021 ©"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createSetup" />

        <ImageView
            android:id="@+id/plusImage"
            android:layout_width="64dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="@+id/wave3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.836"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>