<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colourgradient"
    tools:context=".RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
        <View
            android:id="@+id/topView2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/wave3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/wave"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topView2" />

        <TextView
            android:id="@+id/tvCreateNewAccount"
            android:layout_width="409dp"
            android:layout_height="36dp"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="Account Setup"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:textColorHighlight="#E4D6D6"
            android:textColorLink="#FDFDFD"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setupImage"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/default_profile"
            app:layout_constraintBottom_toBottomOf="@+id/wave3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCreateNewAccount" />

        <EditText
            android:id="@+id/registerFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter First Name (Optional)"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/setupImage" />

        <EditText
            android:id="@+id/registerLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Last Name (Optional)"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerFirstName" />


        <EditText
            android:id="@+id/registerUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="textCapSentences"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerLastName" />

        <EditText
            android:id="@+id/registerAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/ic_human"
            android:drawableLeft="@drawable/ic_human"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Enter Age"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="#000000"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerUsername" />

        <Button
            android:id="@+id/createSetup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_bg"
            android:text="Register"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerAge" />

        <ProgressBar
            android:id="@+id/registerProgressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/createSetup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerAge" />


        <TextView
            android:id="@+id/copyright2"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="FirstNationConnect 2021 Â©"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textSize="13sp"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createSetup" />

        <ImageView
            android:id="@+id/plusImage"
            android:layout_width="64dp"
            android:layout_height="54dp"
            app:layout_constraintBottom_toBottomOf="@+id/wave3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.634"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.836"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>