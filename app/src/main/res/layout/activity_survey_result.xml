<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colourgradient_home"
    tools:context=".SurveyResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SurveyResultActivity">

        <TextView
            android:id="@+id/tvSurveyResponseTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/allerta"
            android:text="Your First Nation Survey Response"
            android:textSize="25dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/fnclogo"
            app:layout_constraintLeft_toRightOf="@id/tvSurveyResponseTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvQuestionOneResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Do you feel like mental health is a prevalent issue within the Aboriginal Community?"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSurveyResponseTitle" />

        <TextView
            android:id="@+id/tvQuestionOneResponseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity=""
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionOneResponse" />


        <TextView
            android:id="@+id/tvQuestionTwoResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Do you feel like mental health has interferred on your life and wellbeing?"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionOneResponseText" />

        <TextView
            android:id="@+id/tvQuestionThreeResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="Do you feel social determinants have impacted First Nations people's mental health?"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionTwoResponseText" />

        <TextView
            android:id="@+id/tvQuestionTwoResponseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textStyle="italic"
            android:text=""
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionTwoResponse" />

        <TextView
            android:id="@+id/tvQuestionResponseThree"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Any further thoughts on this issue? (Optional)"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionThreeResponseText2" />

        <TextView
            android:id="@+id/tvQuestionThreeResponseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity=""
            android:text=""
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="16dp"
            android:fontFamily="@font/montserrat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionResponseThree" />

        <TextView
            android:id="@+id/tvQuestionThreeResponseText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat"
            android:gravity=""
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionThreeResponse" />

        <Button
            android:id="@+id/btCompleteSurveyAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_bg_pop_button"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/black"
            app:backgroundTint="#ffc371"
            android:text="Complete Survey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQuestionThreeResponseText" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>